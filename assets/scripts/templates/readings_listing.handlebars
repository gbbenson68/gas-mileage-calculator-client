{{#each readings as |reading|}}
  <section data-id="{{reading.id}}" class='reading-entry'>
    <h4>Date: {{reading.transaction_date}}</h4>
    Odometer reading: {{reading.odometer_reading}}
    Fuel amount: {{reading.fuel_amount}}
    Price:
      {{#if reading.price}}
        {{formatFloat reading.price}}
      {{else}}
        {{formatFloat 0}}
      {{/if}}
    <h5>Comment: {{reading.comment}}</h5>
    <form data-id="{{reading.id}}" class="data-id-{{reading.id}} update-entry hidden">
      <fieldset>
        <legend>Update Entry</legend>
        {{!-- NOTE: Some of these entries will need to be updated if we end up using radio buttons!! --}}
        <input type='date' name='reading[transaction_date]' value="{{reading.transaction_date}}" class='my-form-field' readonly required>
        <input type='number' min='0' name='reading[odometer_reading]' value="{{reading.odometer_reading}}" class='my-form-field' required>
        <input type='text' name='reading[odometer_units]' value='mi' class='hidden my-form-field' required>
        <input type='number' min='0' step='0.1' name='reading[fuel_amount]' value="{{reading.fuel_amount}}" class='my-form-field' required>
        <input type='text' name='reading[fuel_units]' value='gal' class='hidden my-form-field' required>
        <input type='number' min='0' step='0.01' name='reading[price]' value="{{formatFloat reading.price}}" class='my-form-field'/>
        <input type='text' name='reading[price_units]' value='US Dollars' class='hidden my-form-field'/>
        <input type='text' name='reading[comment]' value="{{reading.comment}}" class='my-form-field'/>
        <input type='submit' class='my-button' value='Enter'/>
      </fieldset>
    </form>
    <button data-id="{{reading.id}}" class="data-id-{{reading.id}} calculator-button update-entry-button my-button">Update Entry</button>
    <button data-id="{{reading.id}}" class="data-id-{{reading.id}} calculator-button update-entry-back-button hidden my-button">Back</button>
    <button data-id="{{reading.id}}" class="data-id-{{reading.id}} calculator-button delete-entry-button my-button">Delete Entry</button>
  </section>

{{/each}}
